# Firebase infrastructure environment contract
# Copy to .env.local for local usage by deployment scripts/CI.

# Active release channel (dev|staging|prod)
FIREBASE_RELEASE_CHANNEL=dev

# Canonical Firebase project IDs
FIREBASE_PROJECT_ID_DEV=
FIREBASE_PROJECT_ID_STAGING=
FIREBASE_PROJECT_ID_PROD=

# Optional override used by deploy scripts
FIREBASE_TARGET_PROJECT_ID=

# Feature flags mirrored for infrastructure workflows
ENABLE_SERVICE_REQUESTS=true
ENABLE_ESCORT_OPTION=false
